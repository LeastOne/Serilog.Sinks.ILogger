<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Serilog sink that writes to a Microsoft ILogger</Description>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Tiny Blue Robots</Authors>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Serilog.Sinks.ILogger</AssemblyName>
    <PackageId>Serilog.Sinks.ILogger</PackageId>
    <PackageTags>serilog;ilogger;microsoft.extensions.logging</PackageTags>
    <PackageIconUrl>http://serilog.net/images/serilog-sink-nuget.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/TinyBlueRobots/Serilog.Sinks.ILogger</PackageProjectUrl>
    <PackageLicenseUrl>http://unlicense.org</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/TinyBlueRobots/Serilog.Sinks.ILogger</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.1" />
    <PackageReference Include="Serilog" Version="2.0.0" />
  </ItemGroup>
</Project>